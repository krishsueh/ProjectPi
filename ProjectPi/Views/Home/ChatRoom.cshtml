    <script type="text/javascript">

        $(function () {

       

            //這裡要改成使用者的名字，預設user
            $('#userName').val("user");

            //連線後台hub
            chat = $.connection.chartHubb;
            console.info(chat);

            //監聽後台 廣撥用
            /*
