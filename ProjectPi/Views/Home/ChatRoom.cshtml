                        $('#user-list-group').append(mhtml);
                    }
                }
            } */
             //end broadcastUserList
            //顯示訊息的地方 Method 
            chat.client.showLastMsg = function (outid) {
                //var outid = $('#sid').text();
                var myType = document.getElementById("myType").value;
                
                const test = async () => {
                    try {
                        //這裡要改API參數 1.ID 2. 是user OR counselor
                        const res = await axios.get('https://localhost:44344/api/chatroom/lastMsgTarget?Id=' + outid + '&Type=' + myType);
                        $('#user-list-group').html('');
                        for (var i = 0; i < res.data.Data.userChatTargetList.length; i++) {
                            if (myType == 'user') var id = res.data.Data.userChatTargetList[i].CounselorId;
                            else var id = res.data.Data.userChatTargetList[i].UserId
                            var mhtml = '<button type="button" class="list-group-item" title="' + id
                                + '" onclick="listGroupItemClick(this);" >' + res.data.Data.userChatTargetList[i].Name + '</button>' + "<p>" + " 最後一句內容 " + res.data.Data.userChatTargetList[i].Content + "</p>";
                            $('#user-list-group').append(mhtml);
                        }

                        console.log(res.data.Data.userChatTargetList[0]);
                    } catch (error) {
                        console.log(error)
                    }
                }
                test();
            }
            //顯示訊息的地方 Method 
            chat.client.showMessage = function (speakerName, message) {
                var msg = '';
                var targetName = $('#sname').text();
                console.log("63  speakerName = " + speakerName + "  targetName = " + targetName);
                if (speakerName == $('#curUserName').text()) {
                    msg = '<p><span class="label label-success"> ' + speakerName + '</span>' + message + '</p>';
                }
                else {
                    if (targetName == speakerName)
                        msg = '<p><span class="label label-info"> ' + speakerName + '</span>' + message + '</p>';
                }
                $('#contextDIV').append(msg);
                $('#message').val('');
                $('#message').val('').focus();
            }   //end showMessage

            //發送按鈕
            $('#sendmessage').click(function () {
                var outid = $('#sid').text();
                var outmessage = $('#message').val();
                var myNumberID = document.getElementById("myNumber").value;

                if (outid != '' && outmessage != '') {
                    var myType = document.getElementById("myType").value;
                    var sendType = '';
                    //判斷是諮商師還是USER
                    if (myType == 'user')
                    {
                        sendType = 'send';
                    }
                    else
                    {
                        sendType = 'accept';
                        var index = outid;
                        outid = myNumberID;
                        myNumberID = index;
                    }

                    const data = {
                        "CounselorId":outid,
                        "UserId": myNumberID,
                        "Type": sendType,
                        "Content": outmessage
                    }; // 填入需要發送的資料
                    //const url = 'https://localhost:44344/api/chatroom/chatlogs?CounselorId=' + outid + '&UserId=1&Content=' + outmessage + '&Type=send'; // 填入API的URL
                    //console.log('成功取得回應：', url);
                    axios.post('https://localhost:44344/api/chatroom/chatlogs', data)
                        .then((response) => {
                            console.log('回應：', response);
                        })
                        .catch((error) => {
                            console.error('錯誤：', error);
                        });

                    if (myType == 'user') {
                        chat.server.sendTo(outid, outmessage);
                    }
                    else {
                        chat.server.sendTo(myNumberID, outmessage);
                    }
                   
                    //chat.server.chatLog(1, 2, outmessage, "send");
                    
                   
                }
                else {
                    alert('请选择接收消息的用户（或者没有输入任何内容）');
                }

            });  //end click

            //當連線成功,註冊
            $.connection.hub.start().done(function () {
                //$('#curUserName').text($('#userName').val());
                chat.server.setUserName($('#userName').val());
            });
        });   //end page ready


        //聊天對象點擊之後，刷新聊天室內容
        function listGroupItemClick(that) {
            var myNumberID = document.getElementById("myNumber").value;
            var tname = $(that).text();
            var tid = $(that).attr('title');
            
            $('#contextDIV').html('');
        
            var myName = $('#curUserName').text();
            $('#sname').text(tname);
            $('#sid').text(tid);
            var myType = document.getElementById("myType").value;
            if (myType == 'counselor') {
                var index = myNumberID;
                var myNumberID = tid;
                var tid = index;
            }
          
            const test = async () => {
                try {
                    const res = await axios.get('https://localhost:44344/api/chatroom/GetChatlogs?CounselorId=' + tid + '&UserId= ' + myNumberID);
                    console.log(res.data.Data.ChatlogList[0]);
                    for (var i = 0; i < res.data.Data.ChatlogList.length; i++) {
                        if (res.data.Data.ChatlogList[i].Type == 'send') {
                            msg = '<p><span class="label label-success"> ' + myName+ '</span>' + res.data.Data.ChatlogList[i].Content + '</p>';
                        }
                        else {
                            msg = '<p><span class="label label-info"> ' + tname + '</span>' + res.data.Data.ChatlogList[i].Content + '</p>';
                        }
                        $('#contextDIV').append(msg);

                    }
                } catch (error) {
                    console.log(error)
                }
            }
            test();

         //end listGroupItemClick
        }

        // 按下enter=按下按鈕發送訊息
        $(document).keydown(function () {
            if (event.keyCode == 13) {
                $('#sendmessage').click();
            }
        });  //end keydown



        //按下按鈕出現聊天對象
        function getTarget() {
            var testT = $('#test').text();
            //var idText = $('#InputCurUserId').text();
            var myName = document.getElementById("myName").value;
            var myNumber = document.getElementById("myNumber").value;
            var myType = document.getElementById("myType").value;

            chat.server.setUserName(myName);
            chat.server.setUserId(myNumber);

            $("#curUserType").text(myType);
            $('#curUserName').text(myName);
            $("#curUserId").text(myNumber);
            const test = async () => {
                try {
                    //這裡要改API參數 1.ID 2. 是user OR counselor
                    const res = await axios.get('https://localhost:44344/api/chatroom/lastMsgTarget?Id=' + myNumber + '&Type=' + myType);
                    $('#user-list-group').html('');
                    for (var i = 0; i < res.data.Data.userChatTargetList.length; i++) {
                        if (myType == 'user') var id = res.data.Data.userChatTargetList[i].CounselorId;
                        else var id = res.data.Data.userChatTargetList[i].UserId
                        var mhtml = '<button type="button" class="list-group-item" title="' + id
                            + '" onclick="listGroupItemClick(this);" >' + res.data.Data.userChatTargetList[i].Name+ '</button>' +"<p>" + " 最後一句內容 " + res.data.Data.userChatTargetList[i].Content+"</p>";
                        $('#user-list-group').append(mhtml);
                    }

                    console.log(res.data.Data.userChatTargetList[0]);
                } catch (error) {
                    console.log(error)
                }
            }
            test();
           
        }//end listGroupItemClick

        function addTarget(that) {
            var tname = $(that).text();
            var tid = $(that).attr('title');
          

            var mhtml = '<button type="button" class="list-group-item" title="' + tid
                + '" onclick="listGroupItemClick(this);" >' + tname + '</button>';
            var element = document.getElementById('user-list-group');
            var childNodes = element.childNodes;
            var isHaveTarget = false;

          
            
            for (var i = 0; i < childNodes.length; i++) {
                if (childNodes[i].title == tid) {
                    isHaveTarget = true;
                    console.log('測試' + childNodes[i].textContent);
                }
            }
            if (isHaveTarget == false) $('#user-list-group').append(mhtml);
            
        }

        function getCounselor() {
            var myType = document.getElementById("myType").value;
            if (myType != "user") return;
            const test = async () => {
                try {
                    //這裡要改API參數 1.ID 2. 是user OR counselor
                    const res = await axios.get('https://localhost:44344/api/chatroom/getTatgetCounselor');
                    $('#btn').html('');
                    for (var i = 0; i < res.data.Data.counselorList.length; i++) {
                        console.log("258" + res.data.Data.counselorList[i].Name);
                        var mhtml = '<button type="button" class="list-group-item" title="' + res.data.Data.counselorList[i].Id
                            + '" onclick="addTarget(this);" >' + res.data.Data.counselorList[i].Name + '</button>';
                        $('#btn').append(mhtml);
                    }

                  
                } catch (error) {
                    console.log(error)
                }
            }
            test();
     
        }
    </script>

